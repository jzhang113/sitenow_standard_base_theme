name = SiteNow Standard Base
description = Base theme for the SiteNow Standard service.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/sitenow-standard-base.normalize.css
stylesheets[all][] = css/sitenow-standard-base.hacks.css
stylesheets[all][] = css/sitenow-standard-base.styles.css
stylesheets[all][] = css/sitenow-standard-base.no-query.css

; ========================================
; Scripts
; ========================================
scripts[] = js/sitenow-standard-base.behaviors.js

; ========================================
; Regions
; ========================================
regions[branding] = Branding
regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First Sidebar
regions[sidebar_second] = Second Sidebar
regions[footer] = Footer

; ========================================
; Plugins
; ========================================
plugins[panels][layouts] = layouts/panel_layouts
